    <script>
        // Enhanced JavaScript for the expanded regions section
        
        // Province accordion functionality
        document.querySelectorAll('.province-header').forEach(header => {
            header.addEventListener('click', () => {
                const provinceCard = header.parentElement;
                provinceCard.classList.toggle('active');
            });
        });
        
        // Town search functionality
        document.getElementById('town-search').addEventListener('input', function() {
            const searchTerm = this.value.toLowerCase();
            const townItems = document.querySelectorAll('.town-item');
            
            townItems.forEach(item => {
                const townName = item.textContent.toLowerCase();
                if (townName.includes(searchTerm)) {
                    item.style.display = 'flex';
                } else {
                    item.style.display = 'none';
                }
            });
            
            // Show/hide provinces based on search results
            document.querySelectorAll('.province-card').forEach(card => {
                const provinceTowns = card.querySelectorAll('.town-item');
                const visibleTowns = Array.from(provinceTowns).filter(town => 
                    town.style.display !== 'none'
                );
                
                if (visibleTowns.length > 0 || searchTerm === '') {
                    card.style.display = 'block';
                    // Auto-expand province if it has matching towns
                    if (searchTerm !== '' && !card.classList.contains('active')) {
                        card.classList.add('active');
                    }
                } else {
                    card.style.display = 'none';
                }
            });
        });
        
        // Contact location button
        document.getElementById('contact-location').addEventListener('click', () => {
            // In a real implementation, this would open a contact form
            // For now, we'll show a toast notification
            showToast('Please email support@jobappautomator.co.za with your specific location', 'success');
        });
        
        // Payment option selection
        document.querySelectorAll('.payment-option').forEach(option => {
            option.addEventListener('click', () => {
                // Remove selected class from all options
                document.querySelectorAll('.payment-option').forEach(opt => {
                    opt.classList.remove('selected');
                });
                
                // Add selected class to clicked option
                option.classList.add('selected');
            });
        });
        
        // Function to show toast
        function showToast(message, type = 'success') {
            // Create toast element if it doesn't exist
            let toast = document.getElementById('toast');
            if (!toast) {
                toast = document.createElement('div');
                toast.id = 'toast';
                toast.className = 'toast';
                toast.innerHTML = `
                    <div class="toast-icon">
                        <i class="fas fa-check-circle"></i>
                    </div>
                    <div class="toast-content">
                        <div class="toast-title">Success!</div>
                        <div class="toast-message">${message}</div>
                    </div>
                `;
                document.body.appendChild(toast);
            }
            
            // Set content
            const toastMessage = toast.querySelector('.toast-message');
            const toastTitle = toast.querySelector('.toast-title');
            const toastIcon = toast.querySelector('.toast-icon i');
            
            toastMessage.textContent = message;
            
            // Set type
            toast.className = 'toast';
            toast.classList.add(type);
            
            // Set title and icon based on type
            if (type === 'success') {
                toastTitle.textContent = 'Success!';
                toastIcon.className = 'fas fa-check-circle';
            } else {
                toastTitle.textContent = 'Error!';
                toastIcon.className = 'fas fa-exclamation-circle';
            }
            
            // Show toast
            toast.classList.add('show');
            
            // Hide after 5 seconds
            setTimeout(() => {
                toast.classList.remove('show');
            }, 5000);
        }
        
        // Set current year in footer
        document.getElementById('current-year').textContent = new Date().getFullYear();

        // Smooth scrolling for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                
                const targetId = this.getAttribute('href');
                if (targetId === '#') return;
                
                const targetElement = document.querySelector(targetId);
                if (targetElement) {
                    window.scrollTo({
                        top: targetElement.offsetTop - 80,
                        behavior: 'smooth'
                    });
                    
                    // Close mobile menu if open
                    if (document.querySelector('.nav-links').classList.contains('active')) {
                        document.querySelector('.nav-links').classList.remove('active');
                        document.querySelector('.nav-buttons').classList.remove('active');
                        document.querySelector('.nav-links').style.display = 'none';
                        document.querySelector('.nav-buttons').style.display = 'none';
                        document.querySelector('.mobile-menu-btn').innerHTML = '<i class="fas fa-bars"></i>';
                    }
                }
            });
        });

        // Mobile menu functionality
        document.querySelector('.mobile-menu-btn').addEventListener('click', () => {
            const navLinks = document.querySelector('.nav-links');
            const navButtons = document.querySelector('.nav-buttons');
            const mobileMenuBtn = document.querySelector('.mobile-menu-btn');
            
            navLinks.classList.toggle('active');
            navButtons.classList.toggle('active');
            
            if (navLinks.classList.contains('active')) {
                navLinks.style.display = 'flex';
                navButtons.style.display = 'flex';
                mobileMenuBtn.innerHTML = '<i class="fas fa-times"></i>';
            } else {
                navLinks.style.display = 'none';
                navButtons.style.display = 'none';
                mobileMenuBtn.innerHTML = '<i class="fas fa-bars"></i>';
            }
        });

        // Add to cart functionality
        document.querySelectorAll('.add-to-cart').forEach(button => {
            button.addEventListener('click', () => {
                const product = button.dataset.product;
                const price = parseInt(button.dataset.price);
                
                showToast(`${product} added to cart!`, 'success');
            });
        });
    </script>
